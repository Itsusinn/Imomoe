<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_anime_cover_3_cover"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <ImageView
            android:id="@+id/iv_anime_cover_3_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_anime_cover_3_title"
        style="@style/TextAppearance.Material3.TitleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/cv_anime_cover_3_cover"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="中二病也要谈恋爱！" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_anime_cover_3_alias"
        style="@style/TextAppearance.Material3.TitleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_anime_cover_3_title"
        app:layout_constraintTop_toBottomOf="@id/tv_anime_cover_3_title"
        tools:text="别名" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_anime_cover_3_episode"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textColor="?attr/colorSecondary"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_anime_cover_3_alias"
        app:layout_constraintTop_toBottomOf="@id/tv_anime_cover_3_alias"
        tools:text="全12集" />

    <com.skyd.imomoe.view.component.FlowLayout
        android:id="@+id/fl_anime_cover_3_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        app:childSpacing="5dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_anime_cover_3_title"
        app:layout_constraintTop_toBottomOf="@id/tv_anime_cover_3_episode"
        app:rowSpacing="5dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_anime_cover_3_describe"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="7dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="?attr/colorSecondary"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_anime_cover_3_title"
        app:layout_constraintTop_toBottomOf="@id/fl_anime_cover_3_type"
        app:layout_constraintVertical_bias="0"
        tools:text="春天，新生入学后开始考虑要加入哪个社团的时候—— 田井中律被从小一起长大的玩伴秋山澪带到轻音部见习。" />
</androidx.constraintlayout.widget.ConstraintLayout>