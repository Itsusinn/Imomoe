<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circle_corner_bottom_dialog_white_12_skin">

    <com.skyd.imomoe.view.component.textview.TypefaceTextView
        android:id="@+id/tv_dialog_bottom_sheet_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:text="@string/webdav_server_file_list"
        android:textColor="@color/foreground_main_color_2_skin"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.skyd.imomoe.view.component.textview.TypefaceTextView
        android:id="@+id/tv_dialog_bottom_sheet_1_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_dialog_bottom_sheet_1_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/tv_dialog_bottom_sheet_1_title"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/foreground_main_color_2_skin"
        android:textSize="15sp"
        app:focused="true"
        app:typeface="bPRTypeface"
        tools:text="tips" />

    <com.skyd.imomoe.view.component.BottomSheetRecyclerView
        android:id="@+id/rv_dialog_bottom_sheet_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_dialog_bottom_sheet_1_title"
        android:clipToPadding="false" />

</RelativeLayout>
