<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_skin"
    android:orientation="vertical"
    tools:context=".view.activity.ConfigDataSourceActivity">

    <com.skyd.imomoe.view.component.AnimeToolbar
        android:id="@+id/atb_config_data_source_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:backDrawable="@drawable/ic_arrow_back_white_24"
        app:buttonDrawable1="@drawable/ic_refresh_white_24"
        app:title="@string/config_custom_data_source"
        app:titleColor="@color/foreground_white_skin"
        app:toolBarBackground="@color/main_color_2_skin"
        app:typeface="bPRTypeface" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_config_data_source_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_skin"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/foreground_main_color_2_skin"
        app:tabMode="scrollable"
        app:tabTextColor="@color/foreground_main_color_2_skin" />

    <com.skyd.imomoe.view.component.ViewPager2View
        android:id="@+id/vp2_config_data_source_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>